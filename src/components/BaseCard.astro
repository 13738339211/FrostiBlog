---
import { Image } from "astro:assets";
import type { PostData } from "../interface/data";
import CardVertical from "./temple/CardVertical.astro";

const { title, image, detail } = Astro.props as PostData;
---

<CardVertical detail={detail}>
  {image && <Image src={image} width="1920" height="1080" alt={title} loading="eager" slot="image" />}
  <slot />
</CardVertical>
