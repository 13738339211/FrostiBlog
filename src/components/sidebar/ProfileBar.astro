---
import { SITE_MENU, USER_AVATAR, USER_SIDEBAR_SOCIAL_ICONS } from "../../config";
import { Icon } from "astro-icon/components";
import Image from "astro/components/Image.astro";
import Card from "../temple/Card.astro";
---

<div transition:name="profile-bar">
  <Card>
    <div class="relative p-4 hidden md:flex flex-col">
      <div class="basis-1/2 md:mb-4 p-4 md:p-0">
        <div class="avatar online">
          <Image
            class="mask mask-circle"
            format="webp"
            width={150}
            height={150}
            src={USER_AVATAR}
            alt="Profile"
            loading="eager"
          />
        </div>
      </div>
      <ul class="menu bg-opacity-0 w-full m-0 p-0 flex flex-col items-center lg:items-start">
        {
          SITE_MENU.map((item) => (
            <li class="w-full relative group">
              {item.subItems ? (
                <details class="menu-item w-full" transition:name={item.id} transition:persist>
                  <summary class="justify-center lg:justify-start items-center text-center text-xl md:text-3xl lg:text-xl font-bold p-4 hover:bg-base-200 rounded-lg">
                    <Icon name={item.svg} class="transition-transform group-hover:scale-110" />
                    <span class="hidden lg:inline ml-2 transition-transform group-hover:translate-x-1">
                      {item.text}
                    </span>
                  </summary>
                  <ul class="w-full bg-base-100 rounded-lg">
                    {item.subItems.map((subItem) => (
                      <li class="relative group">
                        <a
                          tabindex="0"
                          class="menu-item text-base md:text-2xl lg:text-base font-bold p-2 hover:bg-base-200 rounded-lg"
                          id={`header-${subItem.id}`}
                          href={subItem.href}
                          target={subItem.target || "_self"}
                          aria-label={subItem.text}
                        >
                          <Icon name={subItem.svg} class="transition-transform group-hover:scale-110" />
                          <span class="hidden lg:inline ml-2 transition-transform group-hover:translate-x-1">
                            {subItem.text}
                          </span>
                        </a>
                      </li>
                    ))}
                  </ul>
                </details>
              ) : (
                <a
                  tabindex="0"
                  class="flex justify-center lg:justify-start items-center text-center text-xl md:text-3xl lg:text-xl font-bold p-4 hover:bg-base-200 rounded-lg"
                  id={item.id}
                  title={item.id}
                  href={item.href}
                  target={item.target || "_self"}
                  aria-label={item.text}
                >
                  <Icon name={item.svg} class="transition-transform group-hover:scale-110" />
                  <span class="hidden lg:inline ml-2 transition-transform group-hover:translate-x-1">{item.text}</span>
                </a>
              )}
            </li>
          ))
        }
      </ul>
      <div class="text-center">
        {
          USER_SIDEBAR_SOCIAL_ICONS.map((icon) => (
            <div class="tooltip tooltip-bottom m-2" data-tip={icon.title}>
              <a tabindex="0" href={icon.href} aria-label={icon.ariaLabel} title={icon.title} target="_blank">
                <Icon name={icon.svg} class="text-xl md:text-2xl" />
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </Card>
</div>
